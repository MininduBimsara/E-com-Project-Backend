# .env.docker
# Docker Environment Variables for EcoStore Services

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
NODE_ENV=production
FRONTEND_URL=http://localhost:5173

# ==============================================
# SECURITY
# ==============================================
JWT_SECRET=YouAreMySunshineMyOnlySunshineYouMakeMeHappy

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB root credentials for container setup
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123

# Individual service database connections
USER_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-user:27017/user-service?authSource=admin
PRODUCT_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-product:27017/product-service?authSource=admin
CART_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-cart:27017/cart-service?authSource=admin
ORDER_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-order:27017/order-service?authSource=admin
PAYMENT_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-payment:27017/payment-service?authSource=admin
ADMIN_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-admin:27017/admin-service?authSource=admin

# ==============================================
# RABBITMQ CONFIGURATION (if you want to use it)
# ==============================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=ecostore.events
RABBITMQ_QUEUE_PREFIX=ecostore
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_DEFAULT_VHOST=/
ENABLE_RABBITMQ=false
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=1000

# ==============================================
# SERVICE PORTS
# ==============================================
GATEWAY_PORT=5000
USER_SERVICE_PORT=4000
PRODUCT_SERVICE_PORT=4001
CART_SERVICE_PORT=4002
ORDER_SERVICE_PORT=4003
PAYMENT_SERVICE_PORT=4004
ADMIN_SERVICE_PORT=4006

# ==============================================
# SERVICE URLS (Internal Docker Network)
# ==============================================
USER_SERVICE_URL=http://user-service:4000
PRODUCT_SERVICE_URL=http://product-service:4001
CART_SERVICE_URL=http://cart-service:4002
ORDER_SERVICE_URL=http://order-service:4003
PAYMENT_SERVICE_URL=http://payment-service:4004
ADMIN_SERVICE_URL=http://admin-service:4006

# ==============================================
# PAYPAL CONFIGURATION (Payment Service)
# ==============================================
PAYPAL_CLIENT_ID=nope
PAYPAL_CLIENT_SECRET=nope
PAYPAL_MODE=sandbox
DEFAULT_CURRENCY=USD
PAYMENT_TIMEOUT=300000

# ==============================================
# LOGGING AND MONITORING
# ==============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# .env.docker
# Docker Environment Variables for EcoStore Services

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
NODE_ENV=production
FRONTEND_URL=http://localhost:5173

# ==============================================
# SECURITY
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB credentials (used by init scripts)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123

# Order Service Database
ORDER_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-order:27017/order-service?authSource=admin
ORDER_SERVICE_DB_USER=orderuser
ORDER_SERVICE_DB_PASSWORD=orderpass123

# Payment Service Database
PAYMENT_SERVICE_MONGO_URI=mongodb://admin:password123@mongo-payment:27017/payment-service?authSource=admin
PAYMENT_SERVICE_DB_USER=paymentuser
PAYMENT_SERVICE_DB_PASSWORD=paymentpass123

# ==============================================
# RABBITMQ CONFIGURATION
# ==============================================
RABBITMQ_URL=amqp://admin:password123@rabbitmq:5672/ecostore
RABBITMQ_EXCHANGE=ecostore.events
RABBITMQ_QUEUE_PREFIX=ecostore
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=password123
RABBITMQ_DEFAULT_VHOST=ecostore
ENABLE_RABBITMQ=true
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=1000

# ==============================================
# SERVICE PORTS
# ==============================================
GATEWAY_PORT=5000
ORDER_SERVICE_PORT=4003
PAYMENT_SERVICE_PORT=4004

# ==============================================
# SERVICE URLS (Internal Docker Network)
# ==============================================
USER_SERVICE_URL=http://localhost:4000
PRODUCT_SERVICE_URL=http://localhost:4001
CART_SERVICE_URL=http://localhost:4002
ORDER_SERVICE_URL=http://order-service:4003
PAYMENT_SERVICE_URL=http://payment-service:4004
ADMIN_SERVICE_URL=http://localhost:4006

# ==============================================
# PAYPAL CONFIGURATION (Payment Service)
# ==============================================
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_MODE=sandbox
DEFAULT_CURRENCY=USD
PAYMENT_TIMEOUT=300000

# ==============================================
# STRIPE CONFIGURATION (Future Implementation)
# ==============================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# ==============================================
# WEBHOOK SECURITY
# ==============================================
WEBHOOK_SECRET=your-webhook-secret-key-for-payment-providers

# ==============================================
# LOGGING AND MONITORING
# ==============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# DOCKER VOLUME PATHS
# ==============================================
MONGO_ORDER_DATA_PATH=./data/mongo-order
MONGO_PAYMENT_DATA_PATH=./data/mongo-payment
RABBITMQ_DATA_PATH=./data/rabbitmq
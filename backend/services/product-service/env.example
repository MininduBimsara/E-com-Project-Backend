# Product Service Environment Variables
PORT=4001
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/product-service

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Service URLs
USER_SERVICE_URL=http://localhost:4000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=public/product-images/
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# Product Configuration
MAX_PRODUCTS_PER_PAGE=50
DEFAULT_PRODUCTS_PER_PAGE=20

# Search Configuration
SEARCH_INDEX_NAME=products 